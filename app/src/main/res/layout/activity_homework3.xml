<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shircliffa.homework3a.Homework3A">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/Lizard1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/paper1"
        android:layout_alignStart="@+id/paper1"
        android:layout_marginTop="70dp"
        android:onClick="Lizardclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/paper1"
        android:layout_below="@+id/Lizard1"
        android:layout_centerHorizontal="true"
        android:onClick="Paperclicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/scissors1"
        android:layout_alignTop="@+id/paper1"
        android:layout_toRightOf="@+id/paper1"
        android:layout_toEndOf="@+id/paper1"
        android:onClick="Scissorsclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/rock1"
        android:layout_alignTop="@+id/paper1"
        android:layout_toLeftOf="@+id/paper1"
        android:onClick="Rockclicked" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/Lizard2"
        android:layout_below="@id/rock1"
        android:layout_alignLeft="@id/rock1"
        android:onClick="Lizardclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/rock2"
        android:layout_below="@id/paper1"
        android:layout_alignLeft="@id/paper1"
        android:onClick="Rockclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/paper2"
        android:layout_below="@id/rock2"
        android:layout_alignLeft="@id/rock2"
        android:onClick="Paperclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/rock3"
        android:layout_below="@id/rock2"
        android:layout_toRightOf="@id/paper2"
        android:onClick="Rockclicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:id="@+id/spock1"
        android:layout_below="@id/paper2"
        android:layout_alignLeft="@id/paper2"
        android:onClick="Spockclicked"/>




</RelativeLayout>
